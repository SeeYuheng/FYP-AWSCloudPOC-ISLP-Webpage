<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Account - ISLP Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #f8f9fa;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
    }

    .form-container {
      background-color: white;
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      max-width: 500px;
      width: 90%;
    }

    .form-title {
      font-size: 2rem;
      font-weight: bold;
      text-align: center;
      margin-bottom: 30px;
      color: #333;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-label {
      font-weight: 500;
      color: #333;
      margin-bottom: 8px;
    }

    .form-control {
      border-radius: 10px;
      border: 1px solid #ddd;
      padding: 12px 15px;
      font-size: 1rem;
    }

    .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }

    .btn-submit {
      background-color: #28a745;
      color: white;
      padding: 12px 30px;
      border: none;
      border-radius: 10px;
      font-weight: 500;
      width: 100%;
      font-size: 1.1rem;
      margin-top: 10px;
    }

    .btn-submit:hover {
      background-color: #218838;
    }

    .btn-cancel {
      background-color: #6c757d;
      color: white;
      padding: 10px 25px;
      border: none;
      border-radius: 10px;
      text-decoration: none;
      display: inline-block;
      margin-top: 15px;
      text-align: center;
      width: 100%;
    }

    .btn-cancel:hover {
      background-color: #545b62;
      color: white;
      text-decoration: none;
    }

    .admin-badge {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: red;
      color: white;
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 500;
      z-index: 1000;
    }

    .alert {
      margin-bottom: 20px;
    }

    .required {
      color: #dc3545;
    }

    .password-help {
      font-size: 0.85rem;
      color: #666;
      margin-top: 5px;
    }
  </style>
</head>
<body>

  <div class="form-container">
    <h1 class="form-title">Edit Account</h1>

    <!-- Flash Messages -->
    <% if (errors && errors.length > 0) { %>
      <% errors.forEach(error => { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% }) %>
    <% } %>

    <form method="POST" action="/editAccount/<%= account.accountid %>">
      <div class="form-group">
        <label for="username" class="form-label">Username <span class="required">*</span></label>
        <input type="text" class="form-control" id="username" name="username" value="<%= account.username %>" required>
      </div>

      <div class="form-group">
        <label for="email" class="form-label">Email <span class="required">*</span></label>
        <input type="email" class="form-control" id="email" name="email" value="<%= account.email %>" required>
      </div>

      <div class="form-group">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Leave blank to keep current password">
        <div class="password-help">Leave blank to keep the current password unchanged</div>
      </div>

      <div class="form-group">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" id="phone" name="phone" value="<%= account.phone || '' %>">
      </div>

      <div class="form-group">
        <label for="roleid" class="form-label">Role <span class="required">*</span></label>
        <select class="form-control" id="roleid" name="roleid" required>
          <% if (roles && roles.length > 0) { %>
            <% roles.forEach(role => { %>
              <option value="<%= role.roleid %>" <%= account.roleid === role.roleid ? 'selected' : '' %>>
                <%= role.name %>
              </option>
            <% }) %>
          <% } else { %>
            <option value="1" <%= account.roleid === 1 ? 'selected' : '' %>>Admin</option>
            <option value="2" <%= account.roleid === 2 ? 'selected' : '' %>>Lecturer</option>
            <option value="3" <%= account.roleid === 3 ? 'selected' : '' %>>Student</option>
          <% } %>
        </select>
      </div>

      <button type="submit" class="btn-submit">Update Account</button>
      <a href="/accounts" class="btn-cancel">Cancel</a>
    </form>
  </div>

  <!-- Username badge -->
  <div class="admin-badge">
    <% if (currentUser && currentUser.username) { %>
      <%= currentUser.username %>
    <% } else { %>
      Admin
    <% } %>
  </div>

</body>
</html>

