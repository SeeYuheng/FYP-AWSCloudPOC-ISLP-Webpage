<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Search Results - ISLP Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #f8f9fa;
    }

    .sidebar {
      width: 120px;
      height: 100vh;
      background-color: #d9d9d9;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .sidebar a {
      width: 80px;
      height: 80px;
      margin: 10px 0;
      background-color: #c4c4c4;
      color: black;
      text-align: center;
      line-height: 80px;
      text-decoration: none;
      border-radius: 10px;
      font-size: 0.8rem;
      font-weight: 500;
    }

    .sidebar a:first-child {
      background-color: black;
      color: white;
    }

    .main-content {
      margin-left: 120px;
      padding: 40px;
    }

    .top-bar {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 30px;
      position: relative;
    }

    .dashboard-title {
      font-weight: bold;
      font-size: 2rem;
      margin: 0;
    }

    .search-container {
      display: flex;
      justify-content: center;
      margin-bottom: 30px;
    }

    .dashboard-box {
      background-color: #d9d9d9;
      border-radius: 20px;
      min-height: 100px;
      margin: 20px auto;
      width: 80%;
      padding: 15px 25px;
    }

    .dashboard-box h5 {
      font-weight: bold;
    }

    .dashboard-box small {
      color: #555;
    }

    .back-btn {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/lecturer">Home</a>
    <a href="/contact">Contact</a>
    <a href="/feedback">Feedback</a>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Title -->
    <div class="top-bar">
      <h2 class="dashboard-title">Search Results for "<%= query %>"</h2>
    </div>

    <!-- Search Bar -->
    <div class="search-container">
      <form class="d-flex w-50" action="/search" method="GET">
        <input class="form-control me-2" type="search" placeholder="Search ISLPs" name="query" value="<%= query %>">
        <button class="btn btn-dark" type="submit">Search</button>
      </form>
    </div>

    <!-- Results -->
    <% if (results.length > 0) { %>
      <% results.forEach(project => { %>
        <div class="dashboard-box">
          <div class="d-flex justify-content-between align-items-center">
            <h5><%= project.project_title %></h5>
            <div>
              <a href="/ISLP/<%= project.projectid %>" class="btn btn-sm btn-outline-dark me-2">View</a>
              <a href="/editISLP/<%= project.projectid %>" class="btn btn-sm btn-outline-dark me-2">Edit</a>
              <a href="/deleteISLP/<%= project.projectid %>" class="btn btn-sm btn-outline-danger"
                onclick="return confirm('Are you sure you want to delete this project?');">Delete</a>
            </div>
          </div>
          <small>
            Description: <%= project.description %>
                 <br>Start Date: 
        <% 
          var startDate = new Date(project.project_start);
          var formattedStartDate = (startDate.getDate() + '').padStart(2, '0') + '/' + 
                                  ((startDate.getMonth() + 1) + '').padStart(2, '0') + '/' +                         
                                   startDate.getFullYear() + ' |';
        %>
        <%= formattedStartDate %>
      End Date: 
        <% 
          var endDate = new Date(project.project_end);
          var formattedEndDate = (endDate.getDate() + '').padStart(2, '0') + '/' + 
                                  ((endDate.getMonth() + 1) + '').padStart(2, '0') + '/' +                         
                                   endDate.getFullYear() + ' |';
        %>
        <%= formattedEndDate %>
            Status: <%= project.project_status %>
          </small>
        </div>
      <% }) %>
    <% } else { %>
      <p class="alert alert-info">No results found for "<%= query %>". Please try a different search term.</p>
    <% } %>

    <!-- Back to Home -->
    <div class="back-btn">
      <a href="/lecturer" class="btn btn-dark">Back to Home</a>
    </div>
  </div>

</body>
</html>

